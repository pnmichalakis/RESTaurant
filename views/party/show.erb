<h2> <%= @party.name%> ----- Table of: <%=@party.number%> ------ Has paid? <%=@party.paid%> </h2>
<div class="currentorder">
	<h2><u> Party's Current Order </u></h2>
	<% @party.orders.each do |order| %>
		<a href="/parties/<%=@party.id%>/orders"><p><%= order.food.name %></p></a>
	<%end%>
</div>

<a href="/parties/<%=@party.id%>/edit">Change of plans?</a>


<form class="cancel" action="/parties/<%=@party.id%>" method="post">
	<input type="hidden" name="_method" value="delete">
	<input type="submit" value="Cancellation">
</form>

<!-- <h2>Create order for <%=@party.name%></h2> -->
<h2><u> Select Food </u></h2>
<div class="partymenu">
	<%@foods.each do |food|%>
			<form action="/parties/<%=@party.id%>/orders" method="post">
			<input type="hidden" name="order[food_id]" value="<%= food.id %>">
			<input type="hidden" name="order[party_id]" value="<%= @party.id %>">
				<button class="partyfood">				
			<%=food.name%>
				</button>
			</form>
	<%end%>
</div>
